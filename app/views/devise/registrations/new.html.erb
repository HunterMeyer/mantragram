<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :mobile_number %><br />
  <%= f.text_field :mobile_number, autofocus: true, placeholder: '321-212-5555' %></div>

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: '******' %></div>

  <div><%= f.label :carrier, 'Select Your Carrier' %><br />
    <%= f.select :carrier, carrier_options %></div><br>

  <div><%= f.submit "Sign up", class: 'btn btn-primary' %></div>
<% end %>
<br>
<%= render "devise/shared/links" %>
