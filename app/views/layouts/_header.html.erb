<nav class='navbar navbar-default navbar-fixed-top' role='navigation'>
  <div class='container'>
    <div class='navbar-header'>
      <button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#header-menu'>
        <span class='sr-only'>Toggle navigation</span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>
      <%= link_to icon('fa fa-sun-o', 'Mantragram'), root_path, class: 'navbar-brand' %>
    </div>
    <div class='collapse navbar-collapse' id='header-menu'>
      <% if current_user %>
        <ul class='nav navbar-nav pull-right'>
          <li><%= link_to icon('fa fa-user'), user_path(current_user) %></li>
          <li><%= link_to 'logout', destroy_user_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <%= form_for User.new, :url => session_path(:user), :html => {:class=> 'navbar-form navbar-right'} do |f| -%>
          <%= f.text_field :mobile_number, autofocus: true, placeholder: 'Mobile Number', class: 'form-control' %>
          <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
          <%= f.submit 'Sign in', class: 'btn btn-default' %>
        <% end %>
      <% end %>
    </div>
  </div>
</nav>
