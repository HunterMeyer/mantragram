<%= nav_bar fixed: :top, brand: icon('fa fa-sun-o', 'Mantragram'), responsive: true do %>
  <%= menu_group do %>
    <%= menu_item 'Home', root_path %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <% if current_user %>
      <%= menu_item icon('fa fa-user'), user_path(current_user) %>
      <%= menu_item 'logout', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= form_for User.new, :url => session_path(:user), :html => {:class=> 'navbar-form navbar-right'} do |f| -%>
        <%= f.text_field :mobile_number, autofocus: true, placeholder: 'Mobile Number', class: 'span2' %>
        <%= f.password_field :password, placeholder: 'Password', class: 'span2' %>
        <%= f.submit 'Sign in', class: 'btn btn-default' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
