<div class='col-md-6 col-sm-12 col-xs-12' style='display: none;' id='edit-password-form'>
  <%= form_for(@user, as: @user, url: registration_path(@user), html: { method: :put }) do |f| %>
    <div class='form-group'>
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :password, 'New password' %>
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
    </div>
    <%= button_tag type: :submit, class: 'btn btn-primary' do %>
      <%= icon('fa fa-check', 'Save') %>
    <% end %>
    <span id='cancel-password'>Cancel</span>
  <% end %>
</div>
