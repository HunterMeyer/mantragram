<div class='row'>
  <div class='col-md-6 col-sm-12 col-xs-12' style='display: none;' id='edit-password-form'>
    <%= form_for(@user, as: @user, url: registration_path(@user), html: { method: :put }) do |f| %>
      <div class='form-group'>
        <%= f.password_field :current_password, autocomplete: 'off', placeholder: 'Current Password', class: 'form-control input-sm' %>
      </div>
      <div class='form-group'>
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'New Password', class: 'form-control input-sm' %>
      </div>
      <%= button_tag type: :submit, class: 'btn btn-default btn-sm' do %>
        <%= icon('fa fa-check', 'Save') %>
      <% end %>
      <span id='cancel-password'>Cancel</span>
    <% end %>
  </div>
</div>
